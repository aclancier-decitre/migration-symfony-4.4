{% extends app.request.xmlHttpRequest ? 'base_modal.html.twig' : '::base.html.twig' %}

{% block title %}Quantités en commande{% endblock %}
{% block page_title %}Quantités en commande{% endblock %}

{% block body %}
    {% if currentOrdersQuantities['ean'] is null %}
        <div class="dct-alert-notice">
            Aucun résultat.
        </div>
    {% else %}
        <div class="row">
            <div class="col">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        En cours de transfert de l'entrepôt
                        <strong>{{ currentOrdersQuantities['transfers_from_warehouse_amount'] }}</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        En cours de transfert d'un magasin
                        <strong>{{ currentOrdersQuantities['transfers_from_store_amount'] }}</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        En commande fournisseur
                        <strong class="mx-2"> {{ currentOrdersQuantities['supplier_orders_amount'] }} </strong>
                        <em class="mx-2">
                            (dont <strong>{{ currentOrdersQuantities['client_reservations_amount'] }}</strong> réservations client)
                        </em>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                {% if currentOrdersQuantities['last_supplier_order_at'] %}
                    <h5 class="d-flex align-items-center">
                        <i class="dct-icon-calendar text-muted mr-2"></i> Date dernière commande fournisseur
                    </h5>
                    <div class="mt-3">
                        {{ currentOrdersQuantities['last_supplier_order_at']|date('d/m/Y') }}
                    </div>
                {% else %}
                    <h5>Aucune commande fournisseur existante</h5>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}
