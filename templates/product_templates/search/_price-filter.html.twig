<h5 class="mb-2 pb-3">Prix</h5>

<form method="get" id="priceRangeForm" class="mt-3">
    <div class="form-group row mb-1">
        <div class="{{ app.request.xmlHttpRequest ? 'col-lg-4' : 'col-lg-1' }}">
            <label for="price_minimum" class="col-form-label">De</label>
        </div>
        <div class="{{ app.request.xmlHttpRequest ? 'col-lg-8' : 'col' }}">
            <div class="input-group">
                <input type="text" class="form-control {{ app.request.xmlHttpRequest ? 'inside-modal' : '' }}"
                       id="price_minimum" name="price_minimum"
                       value="{{ app.request.query.get('price_minimum') }}"/>
                <div class="input-group-append">
                    <span class="input-group-text">€</span>
                </div>
            </div>
        </div>
        <div class="{{ app.request.xmlHttpRequest ? 'col-lg-4' : 'col-lg-1' }}">
            <label for="price_maximum" class="col-form-label">à</label>
        </div>
        <div class="{{ app.request.xmlHttpRequest ? 'col-lg-8' : 'col' }}">
            <div class="input-group">
                <input type="text" class="form-control {{ app.request.xmlHttpRequest ? 'inside-modal' : '' }}"
                       id="price_maximum" name="price_maximum" value="{{ app.request.query.get('price_maximum') }}"/>
                <div class="input-group-append">
                    <span class="input-group-text">€</span>
                </div>
            </div>
        </div>
    </div>
</form>
