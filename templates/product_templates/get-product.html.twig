<div>
    {{ form_start(form, {'attr': {'action': action}}) }}
    <div class="row">
        <div class='col-lg-12'>
            {{ form_label(form.ean) }}
        </div>
    </div>
    <div class="row">
        <div class='col-lg-2 col-sm-3 col-md-3'>
            <div class="form-group">
                {{ form_widget(form.ean) }}
            </div>
        </div>
        <div class='col-lg-8 col-sm-7 col-md-7'>
            {{ form_widget(form.title) }}
        </div>

        <div class='col-lg-1 col-sm-1 col-md-1'>
            {{ form_widget(form.valid) }}
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_end(form) }}
</div>
